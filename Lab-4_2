#include <stdio.h>
#include <math.h>
#include <locale.h>


int main() {
  int mtd, k=0; // Змінні для меню
	setlocale (LC_CTYPE,"ua");

  printf("\n------------------------------------------\n");
  printf("Як будемо запускати програму\n");
  printf("З використанням циклу з параметром (цикл for) - 1\n");
  printf("З використанням циклу з передумовою (цикл while) - 2\n");
  printf("З використанням циклу з пiсляумовою (цикл do while) - 3\n");
  printf("Вийти з програми - 4\n");
  printf("------------------------------------------\n");

  // Основний цикл програми
  while (1) {
    if (k == 0) {
      printf("\nВвести: ");
      scanf("%d", &mtd);
      k++;
    }
    else {
      printf("\n\n------------------------------------------\n");
      printf("Ви можете спробувати ще раз...\n");
      printf("------------------------------------------\n");
      printf("З використанням циклу з параметром (цикл for) - 1\n");
      printf("З використанням циклу з передумовою (цикл while) - 2\n");
      printf("З використанням циклу з пiсляумовою (цикл do while) - 3\n");
      printf("Вийти з програми - 4\n");
      printf("------------------------------------------\n");
      printf("Ввести: ");
      scanf("%d", &mtd);
    }

    // З використанням циклу з параметром (цикл for)
    if (mtd==1) {
      int sum = 0;
      // Обчислення
      for (int i=1; i<=100; i++) {
        if (i % 5 == 0) sum += i;
      }
      // Виведення
      printf("\n***Результати***\n");
      printf("Сума чисел кратних 5 у дiапазонi (1, 100]: %d", sum);
    }

    // З використанням циклу з передумовою (цикл while)
    else if (mtd==2) {
      int sum = 0;
      // Обчислення
      int i = 1;
      while (i <= 100) {
        if (i % 5 == 0) {
          sum += i;
        }
        i++;
      }
      // Виведення
      printf("\n***Результати***\n");
      printf("Сума чисел кратних 5 у діапазонi (1, 100]: %d", sum);
    }

    // З використанням циклу з післяумовою (цикл do while)
    else if (mtd==3) {
      int sum = 0;
      // Обчислення
      int i = 1;
      do {
        if (i % 5 == 0) {
          sum += i;
        }
        i++;
      } while (i <= 100);
      // Виведення
      printf("\n***Результати***\n");
      printf("Сума чисел кратних 5 у діапазонi (1, 100]: %d", sum);
    }


    //Завершення програми
    else{
      break;
    }
  }
  return 0;
}


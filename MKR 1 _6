#include <stdio.h>
#include <math.h>
#include <locale.h>

int main() {
	setlocale (LC_CTYPE,"ua");

  //Оголошення змінних
  int mtd, k=0; // Змінні для меню
  int n;

  printf("\n------------------------------------------\n");
  printf("Запустити програму - 1\n");
  printf("Вийти з програми - 2\n");
  printf("------------------------------------------\n");

  while (1) {
    if (k == 0) {
      printf("\nВвести: ");
      scanf("%d", &mtd);
      k++;
    }
    else {
      printf("\n\n------------------------------------------\n");
      printf("Ви можете спробувати ще раз - 1 \nВийти з програми - 2\n");
      printf("------------------------------------------\n");
      printf("Ввести: ");
      scanf("%d", &mtd);
    }

    if (mtd==1) {
      //Введення даних
      printf("\nВведіть число з діапазону від 1 до 100 включно: ");
      scanf("%d", &n);

      // Обчислення
      if ((n <= 0) || (n > 100)) {
        printf("\nВи ввели некоректне значення\n");
        printf("Спробуйте ще раз...\n");
      }
      else {
        if ( (n==1) || (n==21) || (n==31) || (n==41) || (n==51) || (n==61) || (n==71) || (n==81) || (n==91) ) {
          printf("-------------\n");
          printf("%d рік", n);
          printf("\n-------------");
        }
        else if ( ((n>=2) && (n<=4)) || ((n>=22) && (n<=24)) || ((n>=32) && (n<=34)) || ((n>=42) && (n<=44)) || ((n>=52) && (n<=54)) || ((n>=62) && (n<=64)) || ((n>=72) && (n<=74)) || ((n>=82) && (n<=84)) || ((n>=92) && (n<=94)) ) {
          printf("-------------\n");
          printf("%d роки", n);
          printf("\n-------------");
        }
        else {
          printf("-------------\n");
          printf("%d років", n);
          printf("\n-------------");
        }
      }

      // Виведення
    }
    //Завершення програми
    else{
      break;
    }
  }
  return 0;
}

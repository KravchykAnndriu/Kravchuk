#include <stdio.h>
#include <math.h>
#include <locale.h>

int main() {
  int mtd, k=0; // Змінні для меню
  float a, b, dx, y;
	setlocale (LC_CTYPE,"ua");

  printf("\n------------------------------------------\n");
  printf("Запустити програму - 1\n");
  printf("Вийти з програми - 2\n");
  printf("------------------------------------------\n");

  // Основний цикл програми
  while (1) {
    if (k == 0) {
      printf("\nВвести: ");
      scanf("%d", &mtd);
      k++;
    }
    else {
      printf("\n\n------------------------------------------\n");
      printf("Ви можете спробувати ще раз - 1 \nВийти з програми - 2\n");
      printf("------------------------------------------\n");
      printf("Ввести: ");
      scanf("%d", &mtd);
    }

    if (mtd==1) {
      // Введення даних
      printf("\nВведiть нижню границю iнтервалу: ");
      scanf("%f", &a);
      printf("Введiть верхню границю iнтервалу: ");
      scanf("%f", &b);
      printf("Введiть крок iнтервалу: ");
      scanf("%f", &dx);

      // Перевірка коректрості вхідних даних
      if (a + dx > b) {
        printf("\nВведенi некоректнi значення нижньої та верхньої границi\n");
        printf("Спробуйте ще раз...\n");
      }
      else {
        //Виключення для запобігання зациклювання
        if (a > 0 || b > 0 || dx > 0) {
          // Виведення
          printf("\n***Результати***\n\n");

          printf("Нижня границя: %.2f\n", a);
          printf("Верхня границя: %.2f\n", b);
          printf("Крок: %.2f\n", dx);

          printf("\n--------------------\n");
          printf(" X\t\tY\n");
          printf("--------------------\n");

          // Обчислення
          while (a <= b) {
            float var = tan(a) + 13;
            if (var < 0) {
              printf(" %.2f\t\tВиконується добування кореня з від'ємного числа\n", a);
            }
            else {
              y = pow(var, 0.25);
              printf(" %.2f\t\t%.2f\n", a, y);
            }
            a += dx;
          }
        }
        else {
          printf("\nВведенi некоректнi данi!\n");
        }
      }
    }

    //Завершення програми
    else{
      break;
    }
  }
  return 0;
}

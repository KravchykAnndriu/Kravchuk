#include <stdio.h>

int main() {
  int a, b, division;
  float sum, d; // d- залишок від ділення

  // Введення даних
  printf("Задайте два цілих числа:\n");
  printf("\nВведіть перше число: ");
  scanf("%d", &a);
  printf("Введіть друге число: ");
  scanf("%d", &b);

  // Обчислення
  sum = 3 * (a+b);
  division = b / a;
  d = a % b;

  // Вивід
  printf("\nРезультати:\n");
  printf("Число 1 = %d\n", a);
  printf("Число 2 = %d\n\n", b);

  printf("Залишок від ділення першого числа на друге = %.f\n", d);
  printf("Ціла частина від ділення 2-го числа на 1-е = %d\n", division);
  printf("Потроєна сума заданих чисел = %.f\n", sum);

  return 0;
}

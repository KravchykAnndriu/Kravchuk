#include <stdio.h>
#include <math.h>
#include <locale.h>

int main() {
setlocale (LC_CTYPE,"ua");
  //Оголошення змінних
  int mtd, k=0; // Змінні для меню
  float x, y, result;

  printf("\n------------------------------------------\n");
  printf("Запустити програму - 1\n");
  printf("Вийти з програми - 2\n");
  printf("------------------------------------------\n");

  while (1) {
    if (k == 0) {
      printf("\nВвести: ");
      scanf("%d", &mtd);
      k++;
    }
    else {
      printf("\n\n------------------------------------------\n");
      printf("Ви можете спробувати ще раз - 1 \nВийти з програми - 2\n");
      printf("------------------------------------------\n");
      printf("Ввести: ");
      scanf("%d", &mtd);
    }

    if (mtd==1) {
      //Введення даних
      printf("\nВведіть значення x: ");
      scanf("%f", &x);
      printf("Введіть значення y: ");
      scanf("%f", &y);

      // Перевірка на виключення
      if (y == -2) {
        printf("\nДля заданого значення y виконується ділення на 0\n");
        printf("Спробуйте ще раз...\n");
      }

      else {
        // Обчислення
        result = pow(x,2) + ((2*x-10) / (y+2));

        // Виведення
        printf("\n---------------------\n");
        printf("Відповідь: %.2f", result);
      }
    }
    //Завершення програми
    else{
      break;
    }
  }
  return 0;
}

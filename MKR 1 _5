#include <stdio.h>
#include <math.h>
#include <locale.h>


int main() {
	setlocale (LC_CTYPE,"ua");
  //Оголошення змінних
  int mtd, k=0; // Змінні для меню
  float x, y, a;

  printf("\n------------------------------------------\n");
  printf("Запустити програму - 1\n");
  printf("Вийти з програми - 2\n");
  printf("------------------------------------------\n");

  while (1) {
    if (k == 0) {
      printf("\nВвести: ");
      scanf("%d", &mtd);
      k++;
    }
    else {
      printf("\n\n------------------------------------------\n");
      printf("Ви можете спробувати ще раз - 1 \nВийти з програми - 2\n");
      printf("------------------------------------------\n");
      printf("Ввести: ");
      scanf("%d", &mtd);
    }

    if (mtd==1) {
      //Введення даних
      printf("\nВведіть значення нижньої границі інтервалу: ");
      scanf("%f", &x);
      printf("Введіть значення верхньої границі інтервалу: ");
      scanf("%f", &y);
      printf("Введіть значення a: ");
      scanf("%f", &a);

      // Обчислення
      int k=0;
      for (float i=x; i<=y; i++) {
        if (a == i) {
          k = 1;
          break;
        }
      }
      // Виведення
      printf("\n***Результати***\n");
      if (k==1) {
        printf("Число %.2f входить в інтервал [%.2f, %.2f]", a, x, y);
      }
      else {
        printf("Число %.2f не входить в інтервал [%.2f, %.2f]", a, x, y);
      }


    }
    //Завершення програми
    else{
      break;
    }
  }
  return 0;
}
